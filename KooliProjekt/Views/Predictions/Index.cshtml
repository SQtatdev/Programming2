@model KooliProjekt.Models.MatchesIndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>@ViewData["Title"]</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Match ID</th>
            <th>First Team</th>
            <th>Second Team</th>
            <th>Start</th>
            <th>End</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Matches.Results)
        {
        <tr>
            <td>@Html.DisplayFor(modelItem => item.Id)</td>
            <td>@Html.DisplayFor(modelItem => item.FirstTeam.TeamName)</td>
            <td>@Html.DisplayFor(modelItem => item.SecondTeam.TeamName)</td>
            <td>@Html.DisplayFor(modelItem => item.GameStart)</td>
            <td>@Html.DisplayFor(modelItem => item.GameEnd)</td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id" 
                   onclick="return confirm('Are you sure you want to delete this prediction?');">Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table>

@(await Component.InvokeAsync<PagerViewComponent>(Model.Matches)) 