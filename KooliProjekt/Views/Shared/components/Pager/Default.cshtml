@model PagedResultBase

@{
    var urlTemplate = Url.Action() + "?page={0}";
    var request = ViewContext.HttpContext.Request;

    // Присоединяем все параметры запроса, кроме "page"
    foreach (var key in request.Query.Keys)
    {
        if (key == "page")
        {
            continue;
        }

        urlTemplate += "&" + key + "=" + request.Query[key];
    }

    // Вычисляем стартовый и конечный индексы для пагинации
    var startIndex = Math.Max(Model.CurrentPage - 5, 1);
    var finishIndex = Math.Min(Model.CurrentPage + 5, Model.PageCount);
}

<div class="row">
    <div class="col-md-8 col-sm-8">
        @if (Model.PageCount > 1)
        {
        <ul class="pagination pull-right">
            <!-- Стрелка на первую страницу -->
            <li>
                <a href="@urlTemplate.Replace("{0}", "1")" title="Первая страница">&laquo;</a>
            </li>

            <!-- Страницы -->
            @for (var i = startIndex; i <= finishIndex; i++)
                {
            @if (i == Model.CurrentPage)
                    {
            <li class="active">
                <span>@i</span>
            </li>
                    }
                    else
                    {
            <li>
                <a href="@urlTemplate.Replace("{0}", i.ToString())">@i</a>
            </li>
                    }
                }

            <!-- Стрелка на последнюю страницу -->
            <li>
                <a href="@urlTemplate.Replace("{0}", Model.PageCount.ToString())" title="Последняя страница">&raquo;</a>
            </li>
        </ul>
        }
    </div>
</div>
